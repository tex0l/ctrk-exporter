---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      :root {
        --color-bg: #1a1a1a;
        --color-text: #e0e0e0;
        --color-border: #333;
        --color-accent: #0066cc;
        --color-success: #00aa00;
        --color-error: #cc0000;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        background: var(--color-bg);
        color: var(--color-text);
        line-height: 1.6;
        padding: 2rem;
      }

      main {
        max-width: 1200px;
        margin: 0 auto;
      }

      h1 {
        font-size: 2rem;
        margin-bottom: 1.5rem;
        color: var(--color-accent);
      }

      h2 {
        font-size: 1.5rem;
        margin: 1.5rem 0 1rem;
        color: var(--color-text);
      }

      .card {
        background: #252525;
        border: 1px solid var(--color-border);
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
      }

      .error {
        color: var(--color-error);
        background: rgba(204, 0, 0, 0.1);
        border: 1px solid var(--color-error);
        border-radius: 4px;
        padding: 1rem;
        margin-top: 1rem;
      }

      .success {
        color: var(--color-success);
      }

      button {
        background: var(--color-accent);
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
      }

      button:hover {
        background: #0052a3;
      }

      button:disabled {
        background: #444;
        cursor: not-allowed;
      }

      select, input {
        background: #2a2a2a;
        color: var(--color-text);
        border: 1px solid var(--color-border);
        padding: 0.5rem;
        border-radius: 4px;
        font-size: 1rem;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
      }

      th, td {
        padding: 0.75rem;
        text-align: left;
        border-bottom: 1px solid var(--color-border);
      }

      th {
        font-weight: 600;
        color: var(--color-accent);
      }

      code {
        background: #2a2a2a;
        padding: 0.2rem 0.4rem;
        border-radius: 3px;
        font-family: 'Courier New', monospace;
      }
    </style>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
