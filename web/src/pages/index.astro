---
import BaseLayout from '../layouts/BaseLayout.astro';
import AppHeader from '../components/AppHeader.vue';
import FileUpload from '../components/FileUpload.vue';
import AnalyzePage from '../components/AnalyzePage.vue';
import Toast from '../components/Toast.vue';
---

<BaseLayout title="CTRK Exporter">
  <AppHeader slot="header" client:only="vue" />

  <div class="container">
    <div class="hero">
      <h1>CTRK Telemetry Exporter</h1>
      <p class="hero-description">
        Parse and analyze Yamaha Y-Trac telemetry files (.CTRK) directly in your browser.
        No server required, all processing happens locally on your device.
      </p>
    </div>

    <FileUpload client:only="vue" />

    <div id="analysis-section">
      <AnalyzePage client:only="vue" />
    </div>
  </div>

  <Toast slot="toast" client:only="vue" />
</BaseLayout>

<style>
  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem 4rem;
  }

  .hero {
    text-align: center;
    margin-bottom: 3rem;
  }

  .hero h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--color-accent), var(--color-info));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  #analysis-section {
    margin-top: 2rem;
  }

  /* Mobile: < 640px */
  @media (max-width: 639px) {
    .container {
      padding: 0 1rem 2rem;
    }

    .hero {
      margin-bottom: 2rem;
    }

    .hero h1 {
      font-size: 1.75rem;
    }

    .hero-description {
      font-size: 0.95rem;
      padding: 0 0.5rem;
    }

    #analysis-section {
      margin-top: 1.5rem;
    }
  }

  /* Tablet: 640px - 1023px */
  @media (min-width: 640px) and (max-width: 1023px) {
    .container {
      padding: 0 1.5rem 3rem;
    }

    .hero h1 {
      font-size: 2.25rem;
    }

    .hero-description {
      font-size: 1.0625rem;
    }
  }

  /* Desktop: >= 1024px */
  @media (min-width: 1024px) {
    .container {
      padding: 0 2rem 4rem;
    }
  }
</style>
